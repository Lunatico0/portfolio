      </SectionContainer>
    </main>
  </section>

</Layout>

<style>
  .parallax {
    min-height: 100vh;
    position: relative;
  }

  .frontLayer,
  .backLayer {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
  }

  .frontLayer {
    z-index: 1;
    overflow-y: hidden;
  }

  .backLayer {
    z-index: 0;
    overflow-y: hidden;
  }

  .frontLayer .frontStars,
  .backLayer .backStars {
    position: absolute;
    overflow-y: hidden;
  }

  .frontLayer .frontStars {
    box-shadow: 0, 0, 1.5em, rgba(0, 0, 0, 0.5);
    width: 3rem;
    color: rgba(36, 144, 148, 0.3);
  }

  .backLayer .backStars {
    box-shadow: 0, 0, 2em, rgba(0, 0, 0, 0.8);
    width: 5rem;
    color: rgba(57, 181, 230, 0.4);
  }

  .frontLayer div:nth-child(1) {
    top: 0;
    left: 20%;
    width: 16%;
  }
  .frontLayer div:nth-child(2) {
    top: 50%;
    left: 0;
    width: 13%;
  }
  .frontLayer div:nth-child(3) {
    bottom: 0;
    left: 30%;
    width: 14%;
  }
  .frontLayer div:nth-child(4) {
    bottom: 20%;
    right: 10%;
    width: 12%;
  }
  .frontLayer div:nth-child(5) {
    top: 10%;
    right: 30%;
    width: 11%;
  }
  
  /* ---Back--- */
  .backLayer div:nth-child(1) {
    top: -20%;
    right: 10%;
    width: 30%;
  }

  .backLayer div:nth-child(2) {
    bottom: -20%;
    right: 20%;
    width: 32%;
    
  }

  .backLayer div:nth-child(3) {
    top: -10%;
    left: 0;
    width: 34%;
  }

  .backLayer div:nth-child(4) {
    bottom: 20%;
    left: 30%;
    width: 28%;
  }

  .backLayer div:nth-child(5) {
    top: 10%;
    left: 0;
    width: 32%;
  }

  .backLayer div:nth-child(6) {
    bottom: -20%;
    left: 30%;
    width: 28%;
  }

  .backLayer div:nth-child(7) {
    top: -10%;
    right: 0;
    width: 34%;
  }

</style>

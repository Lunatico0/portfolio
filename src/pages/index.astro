import Trayectoria from "../components/Trayectoria.astro";
import Briefcase from "../components/icons/Briefcase.astro";
import SectionContainer from "../components/SectionContainer.astro";
---

<Layout
  title="Portfolio | Pittana Patricio - Desarrollador y Programador Web"
  description="Contrata a Patricio Pittana para proyectos de Desarrollo web FrontEnd"
>
  <section class="parallax">
    <div class="frontLayer">
      <div class="frontStars stars"><ion-icon name="logo-tableau"></ion-icon></div>
      <div class="frontStars stars"><ion-icon name="logo-tableau"></ion-icon></div>
      <div class="frontStars stars"><ion-icon name="logo-tableau"></ion-icon></div>
      <div class="frontStars stars"><ion-icon name="logo-tableau"></ion-icon></div>
      <div class="frontStars stars"><ion-icon name="logo-tableau"></ion-icon></div>
    </div>
    <div class="backLayer">
      <div class="backStars stars"><ion-icon name="logo-tableau"></ion-icon></div>
      <div class="backStars stars"><ion-icon name="logo-tableau"></ion-icon></div>
      <div class="backStars stars"><ion-icon name="logo-tableau"></ion-icon></div>
      <div class="backStars stars"><ion-icon name="logo-tableau"></ion-icon></div>
      <div class="backStars stars"><ion-icon name="logo-tableau"></ion-icon></div>

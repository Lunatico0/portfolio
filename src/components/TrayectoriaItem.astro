---
import { string } from "astro/zod";

interface Link {
  url: string;
  id: string;
}

export interface Props {
  title: string;
  description: string;
  date: string;
  link?: Link;
}

const { title, link, description, date } = Astro.props;
---

<div
  class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"
>
</div>
<time
  class="mb-1 text-sm font-normal leading-none text-gray-400 dark:text-gray-500"
  >{date}</time
>
<h3 class="text-lg font-semibold text-gray-900 dark:text-white">{title}</h3>
<p
  class="mb-4 text-base font-normal text-gray-500 dark:text-gray-400 text-pretty"
>
  {description}
</p>
{
  link && (
    <a
      href={link.url}
      target="_blank"
      rel="noopener noreferrer"
      class="inline-flex items-center px-4 py-2 focus:z-10 font-medium rounded-lg
      text-sm text-gray-900 focus:text-blue-700 dark:text-gray-400 hover:text-blue-700 dark:hover:text-white
    bg-white border border-gray-200 dark:border-gray-600 hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-gray-100 dark:bg-gray-800 dark:hover:bg-gray-700 dark:focus:ring-gray-700"
    >
      {link.id}
      <svg
        class="w-3 h-3 ms-2 rtl:rotate-180"
        aria-hidden="true"
        xmlns="http://www.w3.org/200/svg"
        fill="none"
        viewBox="0 0 14 10"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 5h12m0 0L9 1m4 4L9 9"
        />
      </svg>
    </a>
  )
}
